@model List<Person>
@{

  ViewData["Titlephrase"] = "List";
}

<h1>All Student (@Model.Count)</h1>
<table class="table background-dark">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">FirstName</th>
      <th scope="col">LastName</th>
      <th scope="col">Address</th>
      <th scope="col">Department</th>
      <th scope="col">Gender</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @{

      int i = 0;
    }
    @foreach (var employee in Model)

    {
      <tr scope="row">
        <td>@(++i)</td>

        <td><a href="/employee/detail?Id=@employee.Id">@employee.FirstName</a></td>

        <td>@employee.LastName</td>
        <td>@employee.Address</td>
        <td>@employee.Department.Name</td>
        <td>@employee.Gender</td>
        <td>@employee.Salary</td>

        <td><a href="/employee/edit?Id=@employee.Id"><button class="btn btn-primary">Edit</button></a>&nbsp;<a
          href="/employee/delete?Id=@employee.Id"><button class="btn btn-danger">Delete</button></a></td>
        <td><a href="/employee/edit?Id=@employee.Id"><button class="btn btn-primary">View
              Report</button></a></td>
      </tr>































































    }
  </tbody>
</table>
