@model Department
@{



  ViewData["Titlephrase"] = @Model.Name;
}
<h1 style="color: red;">Are you sure to remove following data !!! <a class="btn btn-outline-primary"
    href="/department/index" role="button">Go Back</a></h1>

<ul class="list-group">
  <li class="list-group-item">Name: @Model.Name</li>
  <li class="list-group-item">Code: @Model.Code</li>
  <li class="list-group-item">Address: @Model.Description</li>

</ul>
<form asp-controller="Department" asp-action="Delete" method="POST">
  <input type="hidden" asp-for="Id" />
  <button class="btn btn-danger">Delete Anyway</button>
</form>